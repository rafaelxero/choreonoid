  <exec_depend>python</exec_depend>
  <exec_depend>python-numpy</exec_depend>
  <exec_depend>python-omniorb</exec_depend>
  <exec_depend>omniorb</exec_depend>
  <exec_depend>uuid</exec_depend>
  <exec_depend>gstreamer1.0</exec_depend>
  <exec_depend>gstreamer1.0-plugins-base</exec_depend>

