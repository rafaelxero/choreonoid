<?xml version="1.0"?>
<package format="2">
  <name>choreonoid</name>
  <version>1.7.0</version>
  <description>
  Choreonoid is integrated graphical robotics software based on functions to simulate robots
  </description>
  <maintainer email="s.nakaoka@gmail.com">Shin'ichiro Nakaoka</maintainer>
  <license>MIT</license>

  <author email="s.nakaoka@gmail.com">Shin'ichiro Nakaoka</author>
  <author>Choreonoid Development Team, AIST</author>
  <url type="website">http://choreonoid.org/</url>
  <url type="repository">https://github.com/s-nakaoka/choreonoid/</url>
  <url type="bugtracker">https://github.com/s-nakaoka/choreonoid/issues</url>

  <buildtool_depend>cmake</buildtool_depend>
  <buildtool_depend>pkg-config</buildtool_depend>

  <build_depend>boost</build_depend>
  <build_depend>yaml</build_depend>
  <build_depend>zlib</build_depend>
  <build_depend>libjpeg</build_depend>
  <build_depend>libpng12-dev</build_depend>
  <build_depend>eigen</build_depend>
  <build_depend>assimp-dev</build_depend>
  <build_depend>qtbase5-dev</build_depend>
  <build_depend>libqt5-opengl-dev</build_depend>
  <build_depend>libqt5x11extras5-dev</build_depend>
  <build_depend>python</build_depend>
  <build_depend>omniorb</build_depend>
  <build_depend>uuid</build_depend>
  <build_depend>libpulse-dev</build_depend>
  <build_depend>libsndfile1-dev</build_depend>
  <build_depend>libgstreamer1.0-dev</build_depend>
  <build_depend>libgstreamer-plugins-base1.0-dev</build_depend>

